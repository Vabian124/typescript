{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ESNext","DOM"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": false,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
